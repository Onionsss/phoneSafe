<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置中心"/>

    <heima.it.safe.view.MySettingView
        android:id="@+id/mysetting_aotu"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:biaoti="自动更新设置"
        itheima:img="first"
        >
    </heima.it.safe.view.MySettingView>
    <heima.it.safe.view.MySettingView
        android:id="@+id/mysetting_lanjie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:biaoti="骚扰拦截设置"
        itheima:img="last"
        >
    </heima.it.safe.view.MySettingView>
    <heima.it.safe.view.MySettingView
        android:id="@+id/mysetting_addressshow"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:biaoti="归属地显示设置"
        itheima:img="first"
        >
    </heima.it.safe.view.MySettingView>
    <heima.it.safe.view.MySettingView
        android:id="@+id/mysetting_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:biaoti="归属地风格设置"
        itheima:img="last"
        itheima:mybutton="false"
        >
    </heima.it.safe.view.MySettingView>
</LinearLayout>
