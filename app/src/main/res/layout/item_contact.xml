<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:padding="10dp"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/contactitem_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/admin_inactivated"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/contactitem_name"
        android:text="联系人"
        android:layout_toRightOf="@+id/contactitem_image"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/contactitem_address"
        android:text="联系人"
        android:layout_toRightOf="@+id/contactitem_image"
        android:layout_below="@+id/contactitem_name"
        android:textSize="21sp"
        android:textColor="@color/colorPrimary"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
