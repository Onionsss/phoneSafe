<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp"
              android:orientation="vertical">
    <TextView
        android:id="@+id/safe_tv_title"
        android:layout_width="match_parent"
        android:textSize="23sp"
        android:text="验证密码设置"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:background="#eeeeee"
        android:drawableLeft="@mipmap/ic_info"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/safe_edt_checkmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="25sp"
        android:hint="请确认密码"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/safe_tv_checkok"
            android:textSize="26sp"
            android:text="确认"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:background="@drawable/safe_password_ok"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/safe_tv_checkno"
            android:layout_width="0dp"
            android:textSize="26sp"
            android:text="取消"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@drawable/safe_password_no"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
