<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="xian">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">#444444</item>
    </style>
    <style name="Title">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">#4DA3D7</item>
    </style>
    <!--设置页面的主要字体-->
    <style name="safe_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--按钮的基本样式-->
    <style name="baseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">23sp</item>
        <item name="android:background">@drawable/safe_password_ok</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">下一步</item>
    </style>

   <!-- next按钮 -->
    <style name="nextButton" parent="baseButton">
        <item name="android:drawableRight">@mipmap/next</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">nextClick</item>
        </style>
    <!--上一步按钮 -->
    <style name="returnButton" parent="baseButton">
        <item name="android:drawableLeft">@mipmap/pre</item>
        <item name="android:text">上一步</item>
        <item name="android:onClick">returnClick</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <!-- saft set页-->
    <style name="safe_set_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
