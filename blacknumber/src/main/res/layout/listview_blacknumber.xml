<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:padding="10dp"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_bn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:text="用户昵称"/>
    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/tv_bn_number"
        android:layout_below="@id/tv_bn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="用户昵称"/>
    <TextView
        android:id="@+id/tv_bn_address"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_bn_name"
        android:layout_toRightOf="@id/tv_bn_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="(归属地未知)"/>
    <TextView
        android:id="@+id/tv_bn_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:text="短信拦截"/>
    <ImageView
        android:id="@+id/tv_bn_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:src="@drawable/delete"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_bn_mode"
        />
</RelativeLayout>
